<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".battleActivity"
    android:layout_margin="20dp">

    <TextView
        android:id="@+id/txtplayer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="VOCÃŠ JOGOU"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:textSize="20dp"/>

    <ImageView
        android:id="@+id/imgplayer"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/txtplayer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        tools:src="@drawable/tesoura"/>

    <TextView
        android:id="@+id/txtpc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="COMPUTADOR JOGOU"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_below="@+id/imgplayer"
        android:layout_marginTop="16dp"/>
    <ImageView
        android:id="@+id/imgpc"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/txtpc"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        tools:src="@drawable/tesoura"/>

    <TextView
        android:id="@+id/txtresult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RESULTADO"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_below="@+id/imgpc"
        android:textAlignment="center"
        android:layout_marginTop="16dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="EMPATE"
        android:textStyle="bold"
        android:layout_below="@+id/txtresult"
        android:textAlignment="center"
        android:textSize="30dp"
        android:layout_marginTop="20dp"/>




</RelativeLayout>